<div class="span-24 lrborder">
  <div class="span-23 push-1">
  <h2><%= format_team @team %></h2>
  <ul class="buttons">
    <% unless @team.has_user? current_user # also works if not logged in %>
      <li><%= link_to "Join team", join_team_url(:id => @team) %></li>
    <% end %>
    <% if logged_in? and @team.is_editable_by? current_user %>
      <li><%= link_to "Edit team", edit_team_url(:id => @team) %></li>
    <% end %>
  </ul>

  <p>Team score: <%= @team.score %></p>
  <p>Rank: <%= @team.rank %></p>

  <ul><% for user in @team.users %>
    <li><%= format_user user %> <%= format_user_score user%></li>
    <% end %>
  </ul>
  </div>
  <div class="span-1">
    <br/>
  </div>
</div>

<div class="span-24 lrborder">
  <br/>
</div>

<div class="span-24 map-border">
  <%= show_map @team.spots, :wide %>
</div>
