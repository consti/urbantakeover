<% for claims in sort_claims_to_days(claims) %>
  <h3><%= "%d. %s" % [claims[0].created_at.day, claims[0].created_at.month] %></h3>
  <ul>
  <% for claim in claims %>
    <li><%=format_user claim.user %> took <%= format_spot claim.spot %> <%= if claim.crossed_claim then "from #{format_user claim.crossed_claim.user} " end %> at <%= "%02d:%02d" % [claim.created_at.hour, claim.created_at.min] %></li>
  <% end %>
  </ul>
<% end %>