<% for claims in sort_claims_to_days(claims) %>
  <h3><%= "%d. %s" % [claims[0].created_at.day, claims[0].created_at.month] %></h3>
  <ul>
  <% for claim in claims %>
    <li><%=h claim.user.login %> took <%=h claim.spot.name %> <%= if claim.crossed_claim then "from #{claim.crossed_claim.user.login} " end %> at <%= "%02d:%02d" % [claim.created_at.hour, claim.created_at.min] %></li>
  <% end %>
  </ul>
<% end %>