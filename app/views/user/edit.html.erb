<div class="span-24 lrborder">
  <div class="span-23 push-1 last">
  <h2>Nice to have you with us, <%=format_user @user %>!</h2>
  <%= error_messages_for :user %>
<% form_for :user do |f| -%>
    <div class="span-6 colborder">
      <h3>The basic information</h3>
      <p><label for="login">Login</label><br/>
      <%= f.text_field :login, "class"=>'textfield must' %></p>

      <p><label for="password">Password</label><br/>
      <%= f.password_field :password, "class"=>'textfield must password' %></p>

      <p><label for="password_confirmation">Confirm Password</label><br/>
      <%= f.password_field :password_confirmation, "class"=>'textfield must password' %></p>

      <p><label for="city_id">Your Hometown</label><br/>
      <%= text_field_with_auto_complete :city, :name %></p>
  
      <p><label for="colour_1">Your Colors</label><br/>
      <%= f.text_field :colour_1, "class"=>'colorfield must' %> <%= f.text_field :colour_2, "class"=>'colorfield must' %></p>
      
      <% if @user.team %>
        <p><label for="colour_3">Team Color</label><br/>
          <%= f.text_field :colour_3, "class"=>'colorfield must' %>
        </p>
      <% end %>
    </div>
    <div class="span-6 colborder">
      <h3>Notification?</h3>
      <p><label for="twittername">Twitter</label><br/>
      <%= f.text_field :twittername, "class"=>'textfield optional' %><br/><span class="small">You need to add <%= link_to "cpu", "http://twitter.com/friendships/create/14143882"%> as friend to use this.</span></p>
      <p><label for="email">Email</label><br/>
      <%= f.text_field :email, "class"=>'textfield optional' %></p>
    </div>
    <div class="span-7 last">
      <h3>Are you on Flickr?</h3>
      <p><label for="flickr">Flickr</label><br/>
      <%= f.text_field :flickr, "class"=>'textfield optional' %><br><span class="small">Claiming via Flickr gives more points!</span></p>
    </div>

     <div class="span-23">
  <% if current_user.is_admin? %>
    <p><label for="is_admin">Administrator Access</label><br/>
    <%= f.check_box :is_admin %></p>
  <% end %>
  <p><%= submit_tag 'Save Settings', "class"=>'submit' %></p>
<% end -%>
    </div>
  </div>
</div>