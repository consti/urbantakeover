<h2>Editing spot</h2>

<%= error_messages_for :spot %>

<% form_for(@spot) do |f| %>
  <p>
    Name: <%= f.text_field :name %>
  </p>

  <p>
    Address: <%= f.text_field :address %> or geolocation: <%= f.text_field :geolocation_x %> <%= f.text_field :geolocation_y %>
  </p>
  
  <p>
    Tupalo Link: <%= f.text_field :tupalo_link %>
  </p>
  
  <p>
    Spot Description:<br/> <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @spot %> |
<%= link_to 'Back', spot_path %>
