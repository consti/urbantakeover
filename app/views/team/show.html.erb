<%= div_map @team.spots, :wide %>

<%= div_spacer %>

<div class="span-24 lrborder">
  <div class="span-23 push-1">
  <%
    navigation = []
    navigation << ["Join team", join_team_url(:id => @team)] unless @team.has_user? current_user # also works if not logged in
    navigation << ["Edit team", edit_team_url(:id => @team)] if logged_in? and @team.is_editable_by? current_user 
  %>      
  <%= format_navigation navigation %>
  
  <h2><%= format_team @team %></h2>

  <p>Team score: <%= @team.score %></p>
  <p>Rank: <%= @team.rank %></p>

  <ul><% for user in @team.users %>
    <li><%= format_user user %> <%= format_user_score user%></li>
    <% end %>
  </ul>
  </div>
  <div class="span-1">
    <br/>
  </div>
</div>
