<div class="span-24 lrborder">
  <div class="span-23 push-1 last">
    <h2>Editing team</h2>

    <%= error_messages_for :team %>
    <% form_for(@team, :url => {:action => 'update', :id => @team.id}) do |f| -%>
      <div class="span-6 colborder">
        <h3>The basic information</h3>
        <p><label for="login">Name</label><br/>
        <%= f.text_field :name, :class => 'textfield must', :value => params[:name] %></p>

        <p>
          <%= f.submit "Update", "class"=>'submit' %>
        </p>

      </div>
  
      <div class="span-6 colborder">
        <h3>Extra</h3>
        <p><label for="colour_1">Team Color</label><br/>
        <%= f.text_field :colour, :class => 'colorfield' %></p>
      </div>
    <% end -%>
      <%= todo "TODO: Upload custom team logo, icon and sticker graphics"%>
  </div>  
</div>
