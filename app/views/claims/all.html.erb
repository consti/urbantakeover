<div class="span-24">
  <%= show_map @spots, :wide %>
</div>

<div class="span-24 lrborder last">
  <div class="span-23 push-1 last">  
  <br/>
  </div>
  <div class="span-23 push-1 last">  
  <div class="span-10 colborder">
    <h3>Highscore Teams</h3>
    <ol>
    <% for team in @teams %>
      <li>
      <%= format_team team %>: <%= team.score %> points
      </li>
    <% end %>
    </ol>
    </div>
    <div class="span-10 push-1">
    <h3>Highscore Users</h3>
    <ol>
    <% for user in @users %>
      <li>
      <%= format_user user %>: <%= user.score %> points
      <%= sparkline user.claims_for_last_days_grouped_by_day(14).collect {|claims| claims.size} %>
      </li>
    <% end %>
    </ol>
    </div>
  </div>
</div>